---
import type { InferGetStaticPropsType } from 'astro';
import { generateRouteData } from './utils/route-data';
import { paths, getRouteBySlugParam } from './utils/routing';

import Page from './components/Page.astro';

import {routeHook} from 'virtual:starlight/hooks';

export const prerender = false;

const hook = routeHook ?? <T>(route: T): T => route;

const route = await hook(getRouteBySlugParam(Astro.params.slug));

if (route === undefined) {
  return new Response(null, {status: 404});
}

const { Content, headings, remarkPluginFrontmatter } = await Astro.props.entry.render();
const route = generateRouteData({ props: { ...Astro.props, headings, remarkPluginFrontmatter }, url: Astro.url });
---

<Page {...route}><Content /></Page>
